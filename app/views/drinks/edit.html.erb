<div class= "send_menu">
<div class="log_out_btn">
  <%= link_to '戻る', "/users" %>
</div>
<h3>
      編集する
    </h3>
<div class="contents_row">
  <%= form_for("/drinks/#{@drink.id}", method: :patch) do |f| %>
    
    <p>商品名</p>
    <%= f.text_field :title, placeholder: "タイトル", value: @drink.product, class: "product_name" %>
    <p>記事を入力</p>
    <%= f.text_area :text, placeholder: "本文を入力", value: @drink.text, class: "product_text" %>
    <p>画像を選択</p>
    <%= f.text_field :image ,value: @drink.image, class: "product_image" %>
    <p>価格を入力</p>
    <%= f.text_field :price, placeholder: "ここに価格を入力", value: @drink.price, class: "product_price" %>
    <p></p>
    <%= f.submit "編集", class: "send_btn" %>
  <% end %>
</div>
</div>
</div>
