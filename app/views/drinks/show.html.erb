<div class= "user_menu">
  <div class= "log_out_btn">
    <%= link_to '戻る', "/users" %>
  </div>
  <div class= "edit_title">
    <h3>
      Drinkメニュー編集
    </h3>
  </div>
<div class= "main_edit">
  <% @drinks.each do |drink| %>
    <div class="content_post" style="background-image: url(<%= drink.image %>);">
      <div class= "content_product">
        <%= simple_format(drink.product) %>
      </div>
      <div class= "content_text">
        <%= drink.text %>
      </div>
      <div class= "content_link">
        <%= drink.price %>
      </div>
    </div>
      <div class= "edit">
        <ul class="more_list">
          <li>
            <%= link_to '編集', "/drinks/#{drink.id}/edit", method: :get, class: "edit_btn" %>
          </li>
          <li>
            <%= link_to '削除', "/drinks/#{drink.id}", method: :delete, class: "delete_btn" %>
          </li>
        </ul>
    </div>
    </div>
  <% end %>

  <div class= "pagination">
    <%= paginate @drinks %>
  </div>
</div>
</div>